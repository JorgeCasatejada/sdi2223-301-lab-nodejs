{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
	 <div class="row">
		<div class="media col-xs-10">
		  <div class="media-left media-middle">
			<img class="media-object" src="/covers/{{song._id}}.png" alt="cover">
		  </div>
		  <div class="media-body">
			 <h2>{{song.title}}</h2>
			 <p>{{song.author}}</p>
			 <p>{{song.kind}}</p>
			  {% if canBuy %}
				  <a class="btn btn-primary pull-right"
					 href="/songs/buy/{{ song._id }}">{{ song.price }} €</a>
			  {% else %}
				  <audio controls>
					  <source src="/audios/{{ song._id }}.mp3" type="audio/mpeg">
				  </audio>
			  {% endif %}
		  </div>
		</div>
	  </div>

	<h3>Agregar comentario a {{song.title}}</h3>
	<form class="form-horizontal" method="post" action="/comments/{{song._id}}">
		<div class="form-group">
			<label class="control-label col-sm-2" for="comment">Comentario:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="comment" name="comment" placeholder="Comentario sobre la canción" required/>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Agregar comentario</button>
			</div>
		</div>
	</form>

	 <!-- -->
	<h3>Comentarios de {{song.title}}</h3>
	<div class="table-responsive">
	<table class="table table-hover">
		<thead>
		<tr>
			<th>Autor</th>
			<th>Comentario</th>
		</tr>
		</thead>
		<tbody>
		{% for comment in comments %}
			<tr>
				<td>{{ comment.author }}</td>
				<td>{{ comment.text }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	</div>
{% endblock %}